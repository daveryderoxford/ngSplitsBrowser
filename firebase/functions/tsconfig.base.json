{
   "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": false,
      "target": "es2022",
      "types": [
         "chai",
         "node",
         "mocha"
      ]
   },
   "compileOnSave": true,
   "exclude": [
      "node_modules"
   ]
}